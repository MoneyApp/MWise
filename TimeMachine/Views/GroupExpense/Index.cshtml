@model TimeMachine.Models.GroupIndexViewModel
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron text-center">
    <h2>Manage Your Groups Expenses</h2>
    <p class="lead">(Make unlimited groups and record multiple transactions)</p>
</div>


<div class="row">
    <div class="col-md-6">
        <h4>Create New Group</h4>
        <hr/>
       @Html.Partial("CreateGroup",Model.CreateGroupVM)
    </div>

    <div class="col-md-6">
        <h4>View Your Groups</h4>
        <hr/>
        @using (Html.BeginForm("GroupInfo", "GroupExpense", FormMethod.Get))
        {
            <div class="form-group">
                @Html.Label("Select Group", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("GroupId", Model.GroupsList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessage("GroupId", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div> 
        }
    </div>
</div>